{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "no-underscore-dangle": "off",
    "object-curly-newline": "off",
    "no-plusplus": "off",
    "arrow-parens": [
      2,
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ],
    "max-len": [
      "error",
      {
        "code": 180,
        "ignoreTrailingComments": true
      }
    ]
  }
}